services:
  mysql:
    image: mysql:8
    container_name: gameflix-mysql
    restart: always
    environment:
      MYSQL_DATABASE: gameflix
      MYSQL_PASSWORD: root
    ports:
      - 3306:3306
    volumes:
      - mysql_data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      interval: 5s
      timeout: 5s
      retries: 5

  gameflix-app:
    build: .
    container_name: gameflix-gameflix-app
    ports:
      - 8081:8081
    depends_on:
      mysql:
        condition: service_healthy
    environment:
      SPRING_PROFILES_ACTIVE: docker
    restart: on-failure

volumes:
  mysql_data:
